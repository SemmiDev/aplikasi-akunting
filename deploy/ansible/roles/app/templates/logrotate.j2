# Logrotate configuration for {{ app_name }}
# Generated by Ansible - do not edit manually

/var/log/{{ app_name }}/*.log {
    daily
    rotate 730
    compress
    delaycompress
    missingok
    notifempty
    create 0640 {{ app_user }} {{ app_user }}
    dateext
    dateformat -%Y%m%d
    sharedscripts
    postrotate
        systemctl reload {{ app_name }} > /dev/null 2>&1 || true
    endscript
}
